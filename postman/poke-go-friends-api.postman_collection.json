{
  "info": {
    "_postman_id": "poke-go-friends-collection",
    "name": "Poke Go Friends API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection for all Poke Go Friends API endpoints."
  },
  "item": [
    {
      "name": "Submit Friend Code",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"friendCode\": \"1234 5678 9012\",\n  \"trainerName\": \"Ash\",\n  \"playerLevel\": 40,\n  \"location\": \"Pallet Town\",\n  \"description\": \"Looking for friends!\",\n  \"team\": \"Valor\",\n  \"goals\": \"XP, Raids\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/friend-codes",
          "host": ["{{baseUrl}}"],
          "path": ["api", "friend-codes"]
        },
        "description": "Sample 1: Ash (Valor)\n\nSample 2:\n{\n  \"friendCode\": \"2222 3333 4444\",\n  \"trainerName\": \"Misty\",\n  \"playerLevel\": 35,\n  \"location\": \"Cerulean City\",\n  \"description\": \"Water types only!\",\n  \"team\": \"Mystic\",\n  \"goals\": \"Trading, Gifts\"\n}\n\nSample 3:\n{\n  \"friendCode\": \"5555 6666 7777\",\n  \"trainerName\": \"Brock\",\n  \"playerLevel\": 38,\n  \"location\": \"Pewter City\",\n  \"description\": \"Letâ€™s raid together.\",\n  \"team\": \"Instinct\",\n  \"goals\": \"Raids, XP\"\n}"
      }
    },
    {
      "name": "Get Friend Codes",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/friend-codes?page=0&size=20",
          "host": ["{{baseUrl}}"],
          "path": ["api", "friend-codes"],
          "query": [
            { "key": "page", "value": "0" },
            { "key": "size", "value": "20" }
          ]
        }
      }
    },
    {
      "name": "Get Friend Code by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/friend-codes/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "friend-codes", "1"]
        }
      }
    },
    {
      "name": "Update Friend Code",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"trainerName\": \"Ash Updated\",\n  \"playerLevel\": 41\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/friend-codes/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "friend-codes", "1"]
        },
        "description": "Sample 1: Update name and level\n\nSample 2: {\n  \"description\": \"Now looking for PvP battles!\"\n}\n\nSample 3: {\n  \"team\": \"Mystic\",\n  \"goals\": \"Gifts, XP\"\n}"
      }
    },
    {
      "name": "Delete Friend Code",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/api/friend-codes/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "friend-codes", "1"]
        }
      }
    },
    {
      "name": "Search Friend Codes",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/friend-codes/search?trainerName=Ash&location=Pallet%20Town&minLevel=30&maxLevel=40",
          "host": ["{{baseUrl}}"],
          "path": ["api", "friend-codes", "search"],
          "query": [
            { "key": "trainerName", "value": "Ash" },
            { "key": "location", "value": "Pallet Town" },
            { "key": "minLevel", "value": "30" },
            { "key": "maxLevel", "value": "40" }
          ]
        },
        "description": "Sample queries:\n- Search by trainerName only\n- Search by location, minLevel, maxLevel\n- Search by description: ?description=Water%20types%20only!"
      }
    },
    {
      "name": "Get Recent Friend Codes",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/friend-codes/recent?hours=24",
          "host": ["{{baseUrl}}"],
          "path": ["api", "friend-codes", "recent"],
          "query": [
            { "key": "hours", "value": "24" }
          ]
        }
      }
    },
    {
      "name": "Get Friend Code Stats",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/friend-codes/stats",
          "host": ["{{baseUrl}}"],
          "path": ["api", "friend-codes", "stats"]
        }
      }
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "health"]
        }
      }
    },
    {
      "name": "Readiness Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/health/ready",
          "host": ["{{baseUrl}}"],
          "path": ["api", "health", "ready"]
        }
      }
    },
    {
      "name": "Liveness Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/health/live",
          "host": ["{{baseUrl}}"],
          "path": ["api", "health", "live"]
        }
      }
    }
  ]
}
